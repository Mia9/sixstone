<% if @products.any?%>
	<% @products.each do |product|%>
		<%= link_to product_path(product) do%>
		<%= product.name%><br>
		<%end%>
	<%end%><br>
<%end%>

<% if user_signed_in?%>
	<h1>Hello ruby! You are <%= current_user.email%></h1>
	<h3>Your role is <%= current_user.role%>.</h3><br>
	<%= link_to 'Products', products_path(@products)%><br>
	<%= link_to 'Signed Out', destroy_user_session_path, data: {
	turbo_method: :delete}%>
<%else%>
	<%= link_to 'Sign in', new_user_session_path%><br>
	<%= link_to 'Sign Up', new_user_registration_path%>
<%end%>